{
  "name": "six-cities",
  "version": "4.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "npm run ts ./dist/main.rest.js | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "cli": "node --no-warnings=ExperimentalWarning --loader ts-node/esm ./dist/main.cli.js",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 4545"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "1.0.0-beta.3",
    "pino-pretty": "^13.1.2",
    "rimraf": "3.0.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "4.9.5"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "11.5.0",
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "inversify": "^7.10.2",
    "mongoose": "7.5.3",
    "pino": "^10.0.0",
    "reflect-metadata": "^0.2.2"
  }
}
